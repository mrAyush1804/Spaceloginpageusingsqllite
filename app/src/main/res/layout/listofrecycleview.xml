<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_first_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/listcard_transparent"
        app:strokeColor="@color/yellow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/image_astronte"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/astronaut"
                app:tint="@color/arrow_green"></ImageView>

            <TextView
                android:id="@+id/text_name_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_toRightOf="@id/image_astronte"
                android:text="Name"
                android:fontFamily="@font/poppin_bold"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_emai_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name_list"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/poppin_bold"
                android:textSize="16sp"
                android:layout_toRightOf="@id/image_astronte"
                android:text="Email"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_password_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_emai_list"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/poppin_bold"
                android:textSize="16sp"

                android:layout_toRightOf="@id/image_astronte"
                android:text="password"
                android:textColor="@color/white" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>