<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space2w">


        <ImageView
            android:id="@+id/iamge_star"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/star__1_"
            app:tint="@color/default_shape_inactive_color" />


        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/iamge_star"
            android:background="@color/default_shape_inactive_color" />


        <TextView
            android:id="@+id/text_createaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iamge_star"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppin_bold"
            android:text="Create an Account"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_welocome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_createaccount"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Welcome please enter your details"
            android:textColor="@color/default_shape_inactive_color"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_welocome"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppin_bold"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/edittext_degin"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter your name"
            android:maxLines="1"
            android:padding="12dp"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/text_emai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_name"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppin_bold"
            android:text="Emial"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_emai"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/edittext_degin"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter your Email"
            android:maxLines="1"
            android:padding="12dp"
            android:textColorHint="@color/white" />


        <TextView
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_email"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppin_bold"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_password"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/edittext_degin"
            android:fontFamily="@font/poppins_medium"
            android:hint="password"
            android:maxLines="1"
            android:padding="12dp"
            android:textColorHint="@color/white" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singupButton_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_password"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btndegin"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="50dp"
            android:text="Sing up"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lennear_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/singupButton_first"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/apple"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/apple"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/google"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/google" />


            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/facebook" />


        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lennear_first"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_dont_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have a account? "
                android:textColor="@color/edit_tv_color"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/text_singup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/text_dont_have_account"
                android:text="Log in "
                android:textColor="@color/red"
                android:fontFamily="@font/poppin_bold"
                android:textSize="16sp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="X"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:textSize="50sp"
            android:textStyle="bold" />




    </RelativeLayout>

</LinearLayout>